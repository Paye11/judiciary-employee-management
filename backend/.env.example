# Environment Configuration
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/judiciary-staff-management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=24h

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
FRONTEND_URL=http://localhost:8080

# Production MongoDB Atlas Example:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/judiciary-staff-management?retryWrites=true&w=majority

